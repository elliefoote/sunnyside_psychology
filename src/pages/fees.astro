---
import Layout from "../layouts/Layout.astro";
import FeeTable from '../components/FeeTable.astro'
import FeesBackgroundImage from "../components/FeesBackgroundImage.astro";

import { getCollection } from "astro:content"
const fees = await getCollection('fees')
---

<Layout title="Sunny Side Psychology | Fees & Rebates">
  <main>
	<FeesBackgroundImage>
    <div class="md:w-1/3 flex justify-center pt-12">
	    <h3 class="font-serif text-5xl text-neutral-100 pb-3 mb-5">Fees & Rebates</h3>
    </div>
    <div class="md:w-2/3 md:py-12 pt-3 pb-5">
      <div class="bg-white">
        {fees.map((fee, index) => (
      <FeeTable fee={fee} index={index} />
        ))}
      </div>
    </div>
	</FeesBackgroundImage>
  </main>
</Layout>


