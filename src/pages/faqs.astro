---
import Layout from "../layouts/Layout.astro";
import SectionHeader from "../components/SectionHeader.astro"
import Faq from '../components/Faq.astro'
import SunIcon from '../components/SunIcon.astro'

import { getCollection } from "astro:content"
const faqs = await getCollection('faqs')
---

<Layout title="Sunny Side Psychology - FAQs">
  <main class="bg-matisse-700">
	  <div class="bg-matisse-700 m-auto max-w-screen-lg flex flex-col items-center">
      <div class="flex flex-col pt-10 px-10">
	      <SectionHeader headerText="Frequently Asked Questions"/>
      </div>
      <div class="grid md:grid-cols-2">
        {faqs.map((faq, index) => (
        <div class="flex flex-row">
        <Faq faq={faq}/>
        {
          index%2 !== 1
          &&
          <div class="hidden md:flex">
          <SunIcon />
          </div>
        }
        </div>
        ))}
      </div>
	  </div>
  </main>
</Layout>
